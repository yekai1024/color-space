{
  "name": "color-space",
  "displayName": "Color Space",
  "description": "Colorful your VS Code workspace, dress it up automatically!",
  "version": "1.0.0",
  "icon": "images/icon.png",
  "publisher": "yekai1024",
  "repository": {
    "type": "git",
    "url": "https://github.com/yekai1024/color-space.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "colorspace.enable",
        "title": "Color Space: Enable"
      },
      {
        "command": "colorspace.disable",
        "title": "Color Space: Disable"
      },
      {
        "command": "colorspace.showPreview",
        "title": "Color Space: Color Theme"
      },
      {
        "command": "colorspace.pickColor",
        "title": "Color Space: Pick Color"
      },
      {
        "command": "colorspace.randomize",
        "title": "Color Space: Surprise Me"
      },
      {
        "command": "colorspace.clear",
        "title": "Color Space: Clear Color"
      }
    ],
    "configuration": {
      "title": "Color Space",
      "properties": {
        "colorspace.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto color switching."
        },
        "colorspace.ignoreList": {
          "type": "array",
          "default": [],
          "description": "List of workspace names to ignore."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:trae": "node ./out/test/runTestTrae.js",
    "generate-icon": "node ./scripts/convert_svg_to_png.js",
    "package": "node ./scripts/package.js",
    "preview": "node ./scripts/serve-preview.js",
    "coverage": "nyc --reporter=lcov --reporter=text npm test"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^7.2.3",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3"
  }
}
