{
  "name": "color-space",
  "displayName": "Color Space",
  "description": "Colorful your VS Code workspace, dress it up automatically!",
  "version": "1.1.1",
  "icon": "images/icon.png",
  "publisher": "yekai1024",
  "repository": {
    "type": "git",
    "url": "https://github.com/yekai1024/color-space.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "titlebar",
    "color",
    "theme",
    "project",
    "workspace",
    "customization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "colorspace.enable",
        "title": "Color Space: Enable"
      },
      {
        "command": "colorspace.disable",
        "title": "Color Space: Disable"
      },
      {
        "command": "colorspace.colorTheme",
        "title": "Color Space: Color Theme"
      },
      {
        "command": "colorspace.pickColor",
        "title": "Color Space: Pick Color"
      },
      {
        "command": "colorspace.creativeMode",
        "title": "Color Space: Creative Mode"
      },
      {
        "command": "colorspace.randomize",
        "title": "Color Space: Surprise Me"
      },
      {
        "command": "colorspace.clear",
        "title": "Color Space: Clear Color"
      }
    ],
    "configuration": {
      "title": "Color Space",
      "properties": {
        "colorspace.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto color switching."
        },
        "colorspace.ignoreList": {
          "type": "array",
          "default": [],
          "description": "List of workspace names to ignore."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "generate-icon": "node ./scripts/convert_svg_to_png.js",
    "package": "node ./scripts/package.js",
    "local": "node ./scripts/local.js",
    "release": "node ./scripts/release.js",
    "preview": "node ./scripts/serve-preview.js",
    "preview:creative": "node ./scripts/serve-creative.js"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3"
  }
}
